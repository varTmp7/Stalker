<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srfl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.vartmp7.stalker.ui.organizations.OrganizationsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeaderFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/elenco_delle_organizzazioni_disponibili" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaOrganizzazioni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp"
            tools:listitem="@layout/item_organization_list" />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
